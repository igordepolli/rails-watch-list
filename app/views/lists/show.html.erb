<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, crop: :fill if @list.photo.attached? %>');">
  <div class="container">
    <h1> <%= @list.name %> </h1>
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-flat my-3" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <%= render 'lists/card_bookmark', bookmark: bookmark %>
    <% end %>
  </div>
  <hr>
  <div class="reviews">
    <div class="row">
      <div class="show-reviews col-9">
        <h4>Reviews</h4>
        <% @list.reviews.each do |review| %>
          <div class="stars d-flex">
            <% review.stars.times do %>
              <p>&#11088;</p>
            <% end %>
          </div>
          <p><%= review.content %></p>
          <hr>
        <% end %>
      </div>
      <div class="add-review form col-3">
        <h4>Add a review</h4>
        <%= render 'form_review', list: @list, review: @review %>
      </div>
    </div>
  </div>
</div>
